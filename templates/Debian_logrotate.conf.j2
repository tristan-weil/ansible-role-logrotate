{% for logfile in __logrotate_logrotate_log_paths %}
{{ logfile }}
{% endfor %}
{
    missingok
    notifempty
    sharedscripts
    rotate {{ logrotate_archives_count }}
{% if logrotate_when is defined %}
    {{ __logrotate_when_map['logrotate'][logrotate_when] }}
{% endif %}
{% if logrotate_user is defined and logrotate_group is defined and logrotate_mode is defined %}
    create {{ logrotate_mode }} {{ logrotate_user }} {{ logrotate_group }}
{% endif %}
{% if logrotate_maxsize_in_bytes is defined %}
    maxsize {{ logrotate_maxsize_in_bytes }}
{% endif %}
{% if logrotate_compress is defined and logrotate_compress | bool %}
    compress
{% endif %}
{% if logrotate_mail is defined %}
    mail {{ logrotate_mail }}
{% endif %}
{% if logrotate_command is defined %}
    postrotate
        {{ logrotate_command }}
    endscript
{% endif %}
}
